<% content_for :application_submit_actions do %>
  <div class="col">
  </div>
  <div class="col">
    <input type="submit" value="Save" form="application_form" class= "btn btn-success"/>
  </div>
  <div class="col">
    <%= link_to 'Exit', session[:search_results], class: "btn btn-outline-secondary", data: { confirm: 'All changes will be discarded'} %>
  </div>
<% end %>
<%= render 'form', application: @application %>
<script>
  function formatDate(date) {
    var d = new Date(date),
        month = '' + (d.getMonth() + 1),
        day = '' + d.getDate(),
        year = d.getFullYear();
  
    if (month.length < 2)
        month = '0' + month;
    if (day.length < 2)
        day = '0' + day;
  
    return [year, month, day].join('-');
  }
  document.getElementById('application_created_at').value = formatDate(new Date())
</script>
