<p id="notice"><%= notice %></p>

<h1>Suburbs</h1>

<table>
  <thead>
    <tr>
      <th>Display name</th>
      <th>Suburb</th>
      <th>State</th>
      <th>Postcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suburbs.each do |suburb| %>
      <tr>
        <td><%= suburb.display_name %></td>
        <td><%= suburb.suburb %></td>
        <td><%= suburb.state %></td>
        <td><%= suburb.postcode %></td>
        <td><%= link_to 'Show', suburb %></td>
        <td><%= link_to 'Edit', edit_suburb_path(suburb) %></td>
        <td><%= link_to 'Destroy', suburb, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Suburb', new_suburb_path %>
