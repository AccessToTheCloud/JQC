<h1>Clients</h1>

<table>
  <thead>
    <tr>
      <th>Clienttype</th>
      <th>Clientname</th>
      <th>Firstname</th>
      <th>Surname</th>
      <th>Title</th>
      <th>Initials</th>
      <th>Salutation</th>
      <th>Companyname</th>
      <th>Street</th>
      <th>Suburbid</th>
      <th>Postaladdress</th>
      <th>Postalsuburbid</th>
      <th>Abn</th>
      <th>State</th>
      <th>Phone</th>
      <th>Mobileno</th>
      <th>Fax</th>
      <th>Email</th>
      <th>Notes</th>
      <th>Badpayer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.ClientType %></td>
        <td><%= client.ClientName %></td>
        <td><%= client.FirstName %></td>
        <td><%= client.Surname %></td>
        <td><%= client.Title %></td>
        <td><%= client.Initials %></td>
        <td><%= client.Salutation %></td>
        <td><%= client.CompanyName %></td>
        <td><%= client.Street %></td>
        <td><%= client.SuburbID %></td>
        <td><%= client.PostalAddress %></td>
        <td><%= client.PostalSuburbID %></td>
        <td><%= client.ABN %></td>
        <td><%= client.State %></td>
        <td><%= client.Phone %></td>
        <td><%= client.MobileNo %></td>
        <td><%= client.Fax %></td>
        <td><%= client.Email %></td>
        <td><%= client.Notes %></td>
        <td><%= client.BadPayer %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

