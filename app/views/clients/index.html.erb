<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table>
  <thead>
    <tr>
      <th>Client type</th>
      <th>Client name</th>
      <th>First name</th>
      <th>Surname</th>
      <th>Title</th>
      <th>Initials</th>
      <th>Salutation</th>
      <th>Company name</th>
      <th>Street</th>
      <th>Suburb</th>
      <th>Postal address</th>
      <th>Postal suburb</th>
      <th>Australian business number</th>
      <th>State</th>
      <th>Phone</th>
      <th>Mobile number</th>
      <th>Fax</th>
      <th>Email</th>
      <th>Notes</th>
      <th>Bad payer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.client_type %></td>
        <td><%= client.client_name %></td>
        <td><%= client.first_name %></td>
        <td><%= client.surname %></td>
        <td><%= client.title %></td>
        <td><%= client.initials %></td>
        <td><%= client.salutation %></td>
        <td><%= client.company_name %></td>
        <td><%= client.street %></td>
        <td><%= client.suburb_id %></td>
        <td><%= client.postal_address %></td>
        <td><%= client.postal_suburb_id %></td>
        <td><%= client.australian_business_number %></td>
        <td><%= client.state %></td>
        <td><%= client.phone %></td>
        <td><%= client.mobile_number %></td>
        <td><%= client.fax %></td>
        <td><%= client.email %></td>
        <td><%= client.notes %></td>
        <td><%= client.bad_payer %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

